{
  "name": "@vevurn/backend",
  "version": "1.0.0",
  "description": "Vevurn POS Backend API with Express.js",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "auth:migrate": "npx @better-auth/cli migrate",
    "auth:generate": "npx @better-auth/cli generate"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.6",
    "@faire/mjml-react": "^3.5.2",
    "@prisma/client": "^5.19.0",
    "aws-sdk": "^2.1686.0",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.6",
    "classnames": "^2.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.4.0",
    "express-slow-down": "^2.0.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "mailing-core": "^1.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "next": "^15.5.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.0",
    "prisma": "^5.19.0",
    "puppeteer": "^22.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.33.0",
    "socket.io": "^4.8.0",
    "twilio": "^4.20.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/puppeteer": "^5.4.7",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.2",
    "@types/twilio": "^3.19.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mailing": "^1.1.0",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": "22.16.0"
  }
}
