  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:demo": "tsx watch src/demo-server.ts",
    "prebuild": "echo 'ðŸ”§ Pre-build: Generating Prisma client...' && npx prisma generate",
    "build": "echo 'ðŸ”¨ Building TypeScript backend for production...' && npx prisma generate && tsc --project tsconfig.prod.json && tsc-esm-fix --target=dist && echo 'âœ… Production build complete'",
    "build:prod": "echo 'ðŸš€ Production build starting...' && npx prisma generate && tsc --project tsconfig.prod.json && tsc-esm-fix --target=dist && echo 'âœ… Production build complete'",
