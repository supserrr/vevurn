{
  "id": "daily-db-backup",
  "name": "Daily Database Backup",
  "type": "database",
  "schedule": "0 2 * * *",
  "retention": {
    "daily": 7,
    "weekly": 4,
    "monthly": 6
  },
  "compression": "gzip",
  "encryption": true,
  "destinations": [
    {
      "type": "s3",
      "config": {
        "bucket": "vevurn-backups",
        "region": "us-east-1",
        "folder": "database"
      }
    }
  ],
  "notifications": {
    "onSuccess": ["admin@vevurn.com"],
    "onFailure": ["admin@vevurn.com", "tech@vevurn.com"]
  },
  "enabled": true
}
