# MTN Rwanda Mobile Money Integration Configuration
# Copy to .env.mtn.rwanda and update with your actual credentials

# MTN API Environment Configuration
TARGET_ENVIRONMENT=sandbox
MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.co.rw/collection
# For production use: https://momodeveloper.mtn.co.rw/collection

# MTN API Credentials (Register at https://momodeveloper.mtn.co.rw)
MOMO_SUBSCRIPTION_KEY=your_subscription_key_here
MOMO_API_USER=your_api_user_here
MOMO_API_KEY=your_api_key_here

# Application Configuration
MOMO_CALLBACK_URL=https://your-domain.com/api/mobile-money/webhook
MOMO_TIMEOUT=60000
MOMO_RETRY_COUNT=3

# Rwanda Phone Number Validation
RWANDA_COUNTRY_CODE=+250
RWANDA_OPERATOR_CODES=78,79,73,72,70

# Currency Configuration
MOMO_CURRENCY=RWF
MOMO_MIN_AMOUNT=100
MOMO_MAX_AMOUNT=1000000

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
ENABLE_WEBHOOK_VERIFICATION=true

# Production Specific Settings
# Uncomment these for production deployment
# TARGET_ENVIRONMENT=production
# MOMO_BASE_URL=https://momodeveloper.mtn.co.rw/collection
# ENABLE_SSL_VERIFICATION=true
# ENABLE_REQUEST_LOGGING=false
# ENABLE_RESPONSE_LOGGING=false

# Development/Testing Settings
ENABLE_MTN_SANDBOX_LOGGING=true
TEST_PHONE_NUMBER=+250788123456
MOCK_SUCCESSFUL_PAYMENTS=false
