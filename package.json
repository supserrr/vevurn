{
  "name": "vevurn-pos-system",
  "version": "1.0.0",
  "description": "Vevurn POS System - Complete monorepo with separate backend and frontend",
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "// Development": "# Development commands for running services",
    "dev": "turbo run dev --parallel",
    "backend:dev": "pnpm --filter backend dev",
    "frontend:dev": "pnpm --filter frontend dev",

    "// Building": "# Build commands for all packages",
    "build": "turbo run build",
    "backend:build": "pnpm --filter shared build && pnpm --filter backend build",
    "frontend:build": "pnpm --filter shared build && pnpm --filter frontend build",

    "// Testing": "# Testing commands for all packages",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e --concurrency=1",
    "backend:test": "pnpm --filter backend test",
    "frontend:test": "pnpm --filter frontend test",

    "// Database": "# Database management commands",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed",
    "db:studio": "pnpm --filter backend db:studio",
    "db:generate": "pnpm --filter backend db:generate",
    "db:reset": "pnpm --filter backend db:reset",
    "db:backup": "bash scripts/database/backup.sh",
    "db:restore": "bash scripts/database/restore.sh",

    "// Docker": "# Docker and containerization commands",
    "docker:up": "docker-compose up -d",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -f",
    "monitoring:up": "docker-compose -f docker-compose.prod.yml up -d prometheus grafana loki",
    "monitoring:down": "docker-compose -f docker-compose.prod.yml down",

    "// Utility": "# Utility and maintenance commands",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install",
    "shared:build": "pnpm --filter shared build",
    "shared:test": "pnpm --filter shared test",
    "backend:start": "pnpm --filter backend start",
    "frontend:start": "pnpm --filter frontend start",
    "security:audit": "pnpm audit --audit-level high",
    "security:scan": "bash scripts/utilities/security-scan.sh",
    "health-check": "bash scripts/maintenance/health-check.sh",
    "performance-test": "bash scripts/utilities/performance-test.sh"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
