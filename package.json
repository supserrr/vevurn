{
  "name": "vevurn-pos-system",
  "version": "1.0.0",
  "description": "Vevurn POS System - Clean monorepo with independent deployments (backend/, frontend/, docs/)",
  "private": true,
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "backend/shared",
    "backend", 
    "frontend"
  ],
  "scripts": {
    "// Development": "# Development commands for running services",
    "dev": "turbo run dev --parallel",
    "backend:dev": "pnpm --filter @vevurn/backend dev",
    "frontend:dev": "pnpm --filter frontend dev",

    "// Building": "# Build commands for all packages",
    "build": "turbo run build",
    "backend:build": "pnpm --filter @vevurn/shared build && pnpm --filter @vevurn/backend build",
    "frontend:build": "pnpm --filter @vevurn/shared build && pnpm --filter frontend build",

    "// Testing": "# Testing commands for all packages",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e --concurrency=1",
    "backend:test": "pnpm --filter @vevurn/backend test",
    "frontend:test": "pnpm --filter frontend test",

    "// Database": "# Database management commands - Use backend-specific commands",
    "db:migrate": "pnpm --filter @vevurn/backend db:migrate",
    "db:generate": "pnpm --filter @vevurn/backend db:generate",

    "// Docker": "# Docker and containerization commands - Use backend-specific commands",
    "docker:up": "cd backend && docker-compose up -d",
    "docker:down": "cd backend && docker-compose down",

    "// Utility": "# Utility and maintenance commands",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check", 
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install",
    "security:audit": "pnpm audit --audit-level high"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
