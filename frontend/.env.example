# .env.example - Frontend Environment Variables
# Copy this to .env.local and fill in your values

# ==========================================
# NEXT.JS APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# API CONFIGURATION
# ==========================================
# Backend API URL (must match backend server)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Better Auth configuration (must match backend)
BETTER_AUTH_URL=http://localhost:3001

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NEXT_PUBLIC_APP_NAME=Vevurn POS
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# ==========================================
# AUTHENTICATION SETTINGS
# ==========================================
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_TOKEN_STORAGE_KEY=vevurn_token
NEXT_PUBLIC_REFRESH_TOKEN_STORAGE_KEY=vevurn_refresh_token

# ==========================================
# AWS S3 CONFIGURATION (Client-side)
# ==========================================
# Public bucket URL for accessing uploaded files
NEXT_PUBLIC_S3_BUCKET_URL=https://your-bucket.s3.us-east-1.amazonaws.com

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features in the frontend
NEXT_PUBLIC_ENABLE_FILE_UPLOADS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Stripe for payments
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Show debug information
NEXT_PUBLIC_DEBUG_MODE=true

# Mock data for development
NEXT_PUBLIC_MOCK_API=false

# ==========================================
# RENDER PRODUCTION OVERRIDES
# ==========================================
# These will be set in render.yaml for production
# NEXT_PUBLIC_API_URL=https://vevurn-backend.onrender.com
# NEXT_PUBLIC_WS_URL=wss://vevurn-backend.onrender.com
# BETTER_AUTH_URL=https://vevurn-backend.onrender.com
# NEXT_PUBLIC_APP_ENV=production
