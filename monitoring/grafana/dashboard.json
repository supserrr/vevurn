          }
        ],
        "yAxis": {
          "align": false,
          "alignLevel": null
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 9,
        "title": "API Endpoints Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"vevurn-backend\"}[5m])) by (le, route))",
            "legendFormat": "{{ route }} - 95th"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"vevurn-backend\"}[5m])) by (le, route))",
            "legendFormat": "{{ route }} - 50th"
          }
        ],
        "xAxis": {
          "buckets": null,
          "mode": "time",
          "name": null,
          "show": true,
          "values": []
